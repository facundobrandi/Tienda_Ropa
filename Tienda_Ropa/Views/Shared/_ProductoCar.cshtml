@model Tienda_Ropa.Models.Producto
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    double desc = Model.Precio/6;
    double d = Math.Round((double)desc, 2);

    }
            <div class="col mt-4 filter @Model.categoria.NombreCategoria.Replace(" ","_")" >
                <div class="card text-center" style="width: 18rem; border-color:burlywood">
                    <img src="@WC.ImagenRuta@Model.ImagenUrl" style="max-height: 300px;" class="card-img-top" alt="...">
                    <div class="card-body" >
                      <h3 class="card-title">@Model.Nombre</h3>
                      <p class="card-text">@Model.Precio $</p>
                      <h6> 6 Cuotas sin interes de @d </h6>
                      <a asp-action="Detalle" asp-route-Id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Ver Detalle</a>
                    </div>
                  </div>
            </div>
