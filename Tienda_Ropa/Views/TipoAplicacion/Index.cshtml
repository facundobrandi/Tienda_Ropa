@model IEnumerable<Tienda_Ropa.Models.TipoAplicacion>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de TipoAplicacion</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-primary" >
                <i class="fas fa-plus"></i>  Nueva TipoAplicacion</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Nombre Tipo Aplicacion
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <th width="50%">
                            @item.Nombre
                                </th>
                                <th class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="TipoAplicacion" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                                                  <i class="fa-solid fa-marker"></i>  Editar 
                                        </a>
                                        <a asp-controller="TipoAplicacion" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                                    <i class="fa-regular fa-trash-can"></i> Eliminar
                                        </a>
                                    </div>

                                </th>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p>No hay registros de categoria </p>
    }
</div>

