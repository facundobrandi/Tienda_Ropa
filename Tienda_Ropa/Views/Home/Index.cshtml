@model Tienda_Ropa.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-3">
    <div class="text-center">
          <button class="btn-lg btn-outline-secondary filter-button mx-3" aria-current="page" data-filter="all">Todos</button>
          @foreach (var item in Model.categorias)
          {
              <button class="btn-lg btn-outline-secondary filter-button mx-3" aria-current="page" data-filter="@item.NombreCategoria.Replace(" ","_")">
                  @item.NombreCategoria
              </button>
          }
    </div>

    <div> <br />
        <div class="row">
            @foreach (var item in Model.productos)
            {
                <partial name="_ProductoCar" model="item"/>
            }
        </div>    
    </div>
</div>

@section Scripts
{
<script>
            $(document).ready(function(){

            $(".filter-button").click(function(){

                var value = $(this).attr('data-filter');
                if(value == "all")
                {
                    $('.filter').show('1000');
                }
                else
                {
                    $(".filter").not('.'+value).hide('3000');
                    $('.filter').filter('.'+value).show('3000');
            
                }
            });

        });
</script>

}
