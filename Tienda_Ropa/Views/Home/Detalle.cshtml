@model Tienda_Ropa.Models.ViewModels.DetalleVM
@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <form method="post">
        <input  hidden asp-for="@Model.producto.Id"/>
        <div class="container backgroundWhite pt-4"  >
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light row container" style="border-radius: 0px;margin-left:0px">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.producto.Nombre</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-warning" > @((Model.producto.Precio).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagenRuta@Model.producto.ImagenUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.producto.categoria.NombreCategoria</span>
                                        <span class="badge p-3 border text-dark" style="background-color:azure">@Model.producto.TipoAplicacion.Nombre</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.producto.DescripcionLarga)</p>
                                    </div>
                                     <div class="col-12">
                                         <h3>Talles</h3>
                                        <div class="form-check form-check-inline">
                                            @if (Model.producto.Stock_Chico == 0)
                                            {
                                                @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" disabled style="border-radius:100px;">S</button>*@
                                                        <input type="radio" class="btn-check" name="options" id="option1" disabled  autocomplete="off">
                                                        <label class="btn btn-secondary" for="option1">S</label>
                                            }
                                            else
                                            {
                                                    @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" style="border-radius:100px;">S</button>*@
                                                            <input type="radio" class="btn-check" name="options" id="option1" required autocomplete="off">
                                                            <label class="btn btn-secondary" for="option1">S</label>
                                            }

                                            @if (Model.producto.Stock_Medio == 0)
                                            {
                                                @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" disabled style="border-radius:100px;">S</button>*@
                                                                <input type="radio" class="btn-check" name="options" id="option2"  disabled autocomplete="off">
                                                            <label class="btn btn-secondary" for="option2">M</label>
                                            }
                                            else
                                            {
                                                @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" style="border-radius:100px;">S</button>*@
                                                                <input type="radio" class="btn-check" name="options" id="option2" required autocomplete="off">
                                                                <label class="btn btn-secondary" for="option2">M</label>
                                            }

                                            @if (Model.producto.Stock_Grande == 0)
                                            {
                                                @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" disabled style="border-radius:100px;">S</button>*@
                                                                <input type="radio" class="btn-check" name="options" id="option3" disabled autocomplete="off">
                                                            <label class="btn btn-secondary" for="option3">L</label>
                                            }
                                            else
                                            {
                                                @*<button type="button" class="btn btn-primary btn-lg m-2" id="btn_s" style="border-radius:100px;">S</button>*@
                                                                <input type="radio" class="btn-check" name="options"  id="option3" required autocomplete="off">
                                                                <label class="btn btn-secondary" for="option3">L</label>
                                            }

                                      
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Regresar</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExiteEnCarro)
                            {
                                   <a asp-action="RemoverDeCarro" asp-route-Id="@Model.producto.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remover del Carro</a>	
                            }
                            else
                            {
                                      <button type="submit" asp-route-Id="@Model.producto.Id" id="agregar" class="btn btn-info form-control btn-lg" style="height:50px;">Agregar al Carro</button>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


